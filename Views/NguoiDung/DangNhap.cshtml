
@{
    ViewData["Title"] = "DangNhap";
    Layout = "~/Views/Shared/NguoiDungLayout.cshtml";
}

<h1>DangNhap</h1>

<div class="login-container">
    <h2 class="text-center">Đăng Nhập</h2>
    @if (ViewBag.ThongBao != null)
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle"></i> @ViewBag.ThongBao
        </div>
    }
    <form asp-action="DangNhap" method="post">
        <div class="form-group mb-3">
            <label for="txtTaiKhoan">Tài Khoản</label>
            <input type="text" class="form-control" id="txtTaiKhoan" name="txtTaiKhoan" required />
        </div>
        <div class="form-group mb-4">
            <label for="txtMatKhau">Mật Khẩu</label>
            <input type="password" class="form-control" id="txtMatKhau" name="txtMatKhau" required />
        </div>
        <button type="submit" class="btn btn-primary">Đăng Nhập</button>
    </form>
    <div class="login-footer">
        <p>Chưa có tài khoản? <a href="#">Đăng ký ngay</a></p>
        <p><a href="#">Quên mật khẩu?</a></p>
    </div>
</div>